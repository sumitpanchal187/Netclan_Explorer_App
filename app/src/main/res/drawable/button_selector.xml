<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Not clicked state -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/White" />
        </shape>
    </item>
    <!-- Clicked state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/statusbar" />
        </shape>
    </item>
</selector>
